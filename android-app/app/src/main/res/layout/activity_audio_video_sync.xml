<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".AudioVideoSyncActivity">
	
	<Button
		android:id="@+id/btnPrepare"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="Prepare"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent" />
	
	<Button
		android:id="@+id/btnPlay"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="Play"
		android:enabled="false"
		app:layout_constraintTop_toBottomOf="@id/btnPrepare" />
	
	<Button
		android:id="@+id/btnPause"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="Pause"
		app:layout_constraintTop_toBottomOf="@id/btnPlay" />
	
	<Button
		android:id="@+id/btnResume"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="Resume"
		app:layout_constraintTop_toBottomOf="@id/btnPause" />
	
	<androidx.appcompat.widget.AppCompatSeekBar
		android:id="@+id/video_progress"
		android:layout_width="match_parent"
		android:layout_height="20dp"
		app:layout_constraintTop_toBottomOf="@id/btnResume" />
	
	<TextView
		android:id="@+id/progress"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="10dp"
		android:text="00:00"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/video_progress" />
	
	<TextView
		android:id="@+id/duration"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginEnd="10dp"
		android:text="00:00"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toBottomOf="@id/video_progress" />
	
	<com.audio.study.ffmpegdecoder.views.AudioVideoSyncView
		android:id="@+id/audioVideoSyncView"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:layout_constraintTop_toBottomOf="@id/duration" />

</androidx.constraintlayout.widget.ConstraintLayout>