<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OpenGLActivity">

    <FrameLayout
        android:id="@+id/gl_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <Button
        android:id="@+id/gl_triangle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="GL_Triangle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/gl_rectangle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="GL_Rectangle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gl_triangle"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/gl_load_image"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="GL_Load_Image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gl_rectangle"
        android:textAllCaps="false" />


    <androidx.appcompat.widget.AppCompatSeekBar
        android:id="@+id/image_scale"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/gl_load_image" />



</androidx.constraintlayout.widget.ConstraintLayout>