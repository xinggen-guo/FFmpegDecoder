<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.audio.study.ffmpegdecoder">

    <uses-feature
        android:glEsVersion="0x00030002"
        android:required="true" />
    
    <!-- Mic permission -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FFmpegDecoder">
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AudioOpenSLESActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:label="AudioOpenSLES" />
        <activity
            android:name=".AudioTrackerActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:label="AudioTracker" />
        <activity
            android:name=".OpenGLActivity"
            android:label="OpenGLDemo"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name=".VideoPlayerActivity"
            android:label="VideoPlayerDemo"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name=".AudioVideoSyncActivity"
            android:label="AudioVideoSyncDemo"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name=".XMediaPlayerActivity"
            android:label="XMediaPlayerDemo"
            android:screenOrientation="portrait"
            android:exported="false" />
        
        <activity
            android:name=".LiveAudioActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:label="Live Audio Demo" />
    </application>

</manifest>